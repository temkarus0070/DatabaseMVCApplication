@model List<DataBaseMVCApplication.ViewModels.ManufactorViewModel>
@{
    ViewBag.Title = "Index";

    Layout = "~/Views/Shared/ManufactorLayout.cshtml";

}
<table class="table table-sm">
    <tr>
        <th>Название производителя</th>
        <th>Телефон</th>
    </tr>
    @foreach (var manufactor in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(manufactor.Name, "Show", new { manufactorId = manufactor.Id })
            </td>

            <td>@manufactor.Phone</td>
            <td>
                <button type="button" onclick="deleteManufactor(@manufactor.Id)" style="background-color: transparent;border:none;">
                    <img width="25px" height="25px" src="~/Images/delete.png" />
                </button>
            </td>
        </tr>
    }

</table>
<script src="~/Scripts/ScriptsForViews/removeEntities.js"></script>

