@model (DataBaseMVCApplication.ViewModels.OrderViewModel, IEnumerable<DataBaseMVCApplication.ViewModels.OrderPositionViewModel>)

@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <table class="table-sm">
        <tr class="d-table-row">
            <td class="border-right"><h5>Продавец</h5></td>
            <td>
                @Html.DisplayFor(model => model.Item1.Seller.FIO)
            </td>
        </tr>





        <tr>
            <td class="border-right"><h5>Покупатель</h5></td>
            <td>
                @Html.DisplayFor(model => model.Item1.Buyer.FIO)
            </td>
            </tr>
        <tr>
            <td class="border-right">
                <h5>Нужна доставка</h5>
            </td>
            <td>
                @Html.DisplayFor(model => model.Item1.IsDeliver)
            </td>
        </tr>
        <tr>
            <td class="border-right"><h5>Нужна установка</h5></td>
            <td>
                @Html.DisplayFor(model => model.Item1.IsSetup)
            </td>

        </tr>
        <tr>
            <td class="border-right"><h5>Дата заказа</h5> </td>
            <td>
                @Html.DisplayFor(model => model.Item1.OrderDate)
            </td>
        </tr>
        <tr>
          <td class="border-right">  <h5>Дата доставки</h5> </td>
            <td >
                @Html.DisplayFor(model => model.Item1.DeliverDate)
            </td>
        </tr>
        <tr >
            <td class="border-right"> <h5>Дата установки</h5></td>
            <td >
                @Html.DisplayFor(model => model.Item1.SetupDate)
            </td>
        </tr>
        <tr >
            <td class="border-right"> <h5>Цена</h5> </td>
            <td >
                @Html.DisplayFor(model => model.Item1.Price) р.
            </td>
        </tr>

    </table>
    <div>
        <h4>Позиции заказа:</h4>
        <table class="table table-sm">
            <tr>
                <th>Производитель</th>
                <th>Модель</th>
                <th>Описание</th>
                <th>Цвет</th>
                <th>Наличие</th>
                <th>Цена</th>
                <th>Длина</th>
                <th>Ширина</th>
            </tr>
            @foreach (var e in Model.Item2)
            {
                <tr>
                    <td>
                        @e.Window.ManufactorName
                    </td>
                    <td>
                        @e.Window.Model
                    </td>
                    <td>@e.Window.Description</td>
                    <td> @e.Window.Color</td>
                    <td>@(e.Window.Having ? "В наличии" : "Нет в наличии")</td>
                    <td>@e.Window.Price р.</td>
                    <td>@e.Width  </td>
                    <td>@e.Length</td>
                </tr>
            }
        </table>

    </div>
    <div style="margin-left:148px">
        @Html.ActionLink("Редактировать", "Edit", new { orderId = Model.Item1.Id }, new { @class = "btn btn-primary" })
    </div>

