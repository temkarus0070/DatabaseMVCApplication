@model List<DataBaseMVCApplication.ViewModels.WindowViewModel>
@{
    ViewBag.Title = "Home Page";
}
@Html.ActionLink("Добавить окно", "Add", "Window", null, new { @class = "btn btn-primary" })
    <div>
        @foreach (var window in Model)
        {
            <div>@Html.ActionLink(window.Id.ToString(),"Show",new { index=window.Id}) </div>
           @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                      + Convert.ToBase64String(window.Image) + "\" />")
            <div>
                Наличие :
                @if (window.Having)
                {
                    <span>В наличии</span>
                }
                else
                {
                    <span>Нет в наличии</span>
                }
            </div>
            <div>Производитель :@window.ManufactorName</div>
            <div>Цвет : @window.Color</div>
            <div>Описание: @window.Description</div>
            <div>Цена: @window.Price</div>
        }
    </div>




