@model IEnumerable<DataBaseMVCApplication.ViewModels.BuyerViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    @Html.ActionLink("Добавить покупателя", "Add", null, new { @class = "btn btn-primary" })
</p>
<table class="table-sm table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FIO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsLegalEntity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="@item.Id">
            <td>
                @Html.ActionLink(item.FIO, "Show", new { buyerId = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLegalEntity)
            </td>
            <td>
                <button type="button" onclick="deleteBuyer(@item.Id)" style="background-color: transparent;border:none;">
                    <img width="25px" height="25px" src="~/Images/delete.png" />
                </button>
            </td>
        </tr>
    }

</table>

<script src="~/Scripts/ScriptsForViews/removeEntities.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


